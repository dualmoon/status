!!! 5
%html{"ng-app" => "status"}
  %head
    %meta{:charset => "utf-8"}

    /Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}

    /Use title if it's in the page YAML frontmatter
    %title= current_page.data.title || "The Middleman"

    /Lodash
    %script{:src => "//cdnjs.cloudflare.com/ajax/libs/lodash.js/2.4.1/lodash.min.js"}

    /jQuery
    %script{:src => "//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"}

    /Angular + plugins
    %script{:src => "//ajax.googleapis.com/ajax/libs/angularjs/1.3.8/angular.min.js"}
    %script{:src => "//cdnjs.cloudflare.com/ajax/libs/angular-ui-bootstrap/0.12.0/ui-bootstrap-tpls.min.js"}

    /Bootstrap
    %link{:rel => "stylesheet", :href => "//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css"}
    
    /FontAwesome
    %link{:rel => "stylesheet", :href => "//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css"}
    
    /Merriweather font
    /300,400,700,900 + italics all
    %link{:rel => "stylesheet", :href => "//fonts.googleapis.com/css?family=Merriweather:400,900italic,900,700italic,700,300italic,300,400italic&subset=latin,latin-ext"}

    = stylesheet_link_tag "normalize", "all"
    = javascript_include_tag  "all"
  %body{:class => "#{page_classes}"}
    = yield
